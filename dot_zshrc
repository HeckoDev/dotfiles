# Function
function git_branch {
  local branch=$(git rev-parse --abbrev-ref HEAD 2> /dev/null)
  if [[ -n "$branch" ]]; then
    echo "%F{#999999}-->%f (%F{#ff9900}$branch%f)"
  fi
}

function git_status_info() {
  local ahead behind dirty gitstat branch info

  git rev-parse --is-inside-work-tree &> /dev/null || return
  gitstat=$(git status --porcelain=2 --branch 2>/dev/null)

  if [[ "$gitstat" =~ "ahead ([0-9]+)" ]]; then
    ahead=${match[1]}
  fi
  if [[ "$gitstat" =~ "behind ([0-9]+)" ]]; then
    behind=${match[1]}
  fi
  if [[ "$gitstat" =~ "^1 " || "$gitstat" =~ "^2 " || "$gitstat" =~ "^\? " ]]; then
    dirty="✎"
  fi

  info=""
  [[ -n "$ahead" ]] && info+="↑$ahead"
  [[ -n "$behind" ]] && info+="↓$behind"
  [[ -n "$dirty" ]] && info+="$dirty"
  [[ -z "$info" ]] && info="✅"

  echo "%F{#999999}git status:%f %F{#ff9900}$info%f"
}

# atuin - Magical shell history
# https://github.com/ellie/atuin
if command -v atuin &>/dev/null; then
    # Prevent the up arrow rebind
    export ATUIN_NOBIND="true"
    eval "$(atuin init zsh)"
    bindkey '^r' _atuin_search_widget

    # depends on terminal mode - up arrow
    #bindkey '^[[A' _atuin_search_widget
    #bindkey '^[OA' _atuin_search_widget
fi

